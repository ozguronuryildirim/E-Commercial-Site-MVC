@using A.ÖzgürOnurYıldırım_E_ticaretSitesiWebUI.Models.Entity;
@model IEnumerable<ProductModel>

@{
    ViewBag.Title = "List";
}
<br />
<br />
<div class="container pb-5">
    <div class="row">
        <div class="col-md-3">

            @Html.Action("GetCategories","Home")
        </div>
        <div class="col-md-9">
            @if (Model.Count() == 0)
            {
                <div class="alert alert-warning" role="alert">
                    Bu kategoride bir ürün bulunamadı.

                </div>

            }
            else
            {
                <div class="alert alert-warning" role="alert">

                  <h6><strong>@Model.Count()</strong>  adet ürün bulundu.</h6>
                </div>
             }
                    @Html.Partial("_ProductList", Model)
             

            </div>
</div>
</div>